	},
	"dependencies": {
		"compression": "^1.7.4",
		"copy-webpack-plugin": "^5.1.1",
		"cross-env": "^7.0.2",
		"express": "^4.17.1",
		"jquery": "^3.5.0",
		"jquery.transit": "0.9.12",
		"phaser-ce": "^2.15.0"
	},
	"devDependencies": {
		"@babel/core": "^7.9.0",
		"@babel/preset-env": "^7.9.5",
		"babel-loader": "^8.1.0",
		"css-loader": "^3.5.2",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.10.1",
		"eslint-plugin-prettier": "^3.1.2",
		"expose-loader": "^0.7.5",
		"file-loader": "^6.0.0",
		"html-loader": "^1.1.0",
		"html-webpack-plugin": "^4.2.0",
		"husky": "^4.2.5",
		"less": "^3.11.1",
		"less-loader": "^5.0.0",
		"lint-staged": "^10.1.3",
		"prettier": "2.0.4",
